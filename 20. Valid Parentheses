class Solution {
    public boolean isValid(String s) {

        Stack stack = new Stack<Character>();
        char top ;
        for(int i=0;i< s.length();i++){
            char symbol = s.charAt(i);
            if(symbol == '(' || symbol == '{' || symbol == '['){
                stack.push(symbol);
            }else{
                if(stack.isEmpty()){
                    return false;
                }
                top = (char)stack.pop();
                if(symbol == ')' && top != '(')
                    return false;
                if(symbol == '}' && top != '{')
                    return false;
                if(symbol == ']' && top != '[')
                    return false;
            }
        }
        return stack.isEmpty();
    }
}
