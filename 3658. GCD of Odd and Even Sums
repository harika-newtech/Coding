class Solution {
    public int gcdOfOddEvenSums(int n) {
        int sumOdd = 0;
        int sumEven = 0;
        for(int i=1;i<= 2*n ;i++){
            if(i%2 == 0)
                sumEven += i;
            else{
                sumOdd += i;
            }
        }
        if(sumEven > sumOdd){
            return gcd(sumEven,sumOdd);
        }else{
            return gcd(sumOdd,sumEven);
        }
        
    }

    public int gcd(int a, int b){
        if(b == 0 ){
            return a;
        }else{
            return gcd(b,a%b);
        }
    }

}
